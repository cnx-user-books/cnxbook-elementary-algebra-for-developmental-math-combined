<colspec colnum="2" colname="c2"/>
<colspec colnum="3" colname="c3"/>
<thead>
<row valign="top">
<entry valign="middle" align="center" namest="c1" nameend="c3">Conversion Factors Between U.S. and Metric Systems</entry>
</row>
<row valign="top">
<entry valign="middle" align="center">Length</entry>
<entry valign="middle" align="center">Mass</entry>
<entry valign="middle" align="center">Capacity</entry>
</row>
</thead>
<tbody>
<row valign="top">
<entry valign="middle" align="left"><m:math><m:mrow><m:mtable><m:mtr><m:mtd columnalign="left"><m:mtable><m:mtr><m:mtd columnalign="left"><m:mtext>1 in.</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>2.54 cm</m:mtext></m:mtd></m:mtr><m:mtr><m:mtd columnalign="left"><m:mtext>1 ft.</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>0.305 m</m:mtext></m:mtd></m:mtr><m:mtr><m:mtd columnalign="left"><m:mtext>1 yd.</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>0.914 m</m:mtext></m:mtd></m:mtr><m:mtr><m:mtd columnalign="left"><m:mtext>1 mi.</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>1.61 km</m:mtext></m:mtd></m:mtr><m:mtr><m:mtd columnalign="left"><m:mtext>1 m</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>3.28 ft.</m:mtext></m:mtd></m:mtr></m:mtable></m:mtd></m:mtr></m:mtable></m:mrow></m:math></entry>
<entry valign="middle" align="left"><m:math><m:mrow><m:mtable><m:mtr><m:mtd columnalign="left"><m:mtable><m:mtr><m:mtd columnalign="left"><m:mtext>1 lb.</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>0.45 kg</m:mtext></m:mtd></m:mtr><m:mtr><m:mtd columnalign="left"><m:mtext>1 oz.</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>28 g</m:mtext></m:mtd></m:mtr><m:mtr><m:mtd columnalign="left"><m:mtext>1 kg</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>2.2 lb.</m:mtext></m:mtd></m:mtr></m:mtable></m:mtd></m:mtr></m:mtable></m:mrow></m:math>
</entry>
<entry valign="middle" align="left"><m:math><m:mrow><m:mtable><m:mtr><m:mtd columnalign="left"><m:mtable><m:mtr><m:mtd columnalign="left"><m:mtext>1 qt.</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>0.95 L</m:mtext></m:mtd></m:mtr><m:mtr><m:mtd columnalign="left"><m:mtext>1 fl. oz.</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>30 mL</m:mtext></m:mtd></m:mtr><m:mtr><m:mtd columnalign="left"><m:mtext>1 L</m:mtext></m:mtd><m:mtd columnalign="left"><m:mo>=</m:mo></m:mtd><m:mtd columnalign="left"><m:mtext>1.06 qt.</m:mtext></m:mtd></m:mtr></m:mtable></m:mtd></m:mtr></m:mtable></m:mrow></m:math></entry>
